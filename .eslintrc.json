{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["/compiledJs/", "/compiledJsForTests/", "/dist/"],
  "rules": {
    "linebreak-style": ["error", "windows"],
    "quotes": ["warn", "double"],
    "semi": ["error", "always"],
    "func-style": ["error", "expression"],
    "dot-location": ["error", "property"],
    "max-len": ["error", { "code": 110, "ignoreStrings": true, "ignoreTemplateLiterals": true }]
  }
}
