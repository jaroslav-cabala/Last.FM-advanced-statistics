{
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "compiledJs",
    "rootDir": ".",
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
